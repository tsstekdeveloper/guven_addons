<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Module Category -->
        <record id="module_category_fatura_analiz" model="ir.module.category">
            <field name="name">Fatura Analiz</field>
            <field name="sequence">100</field>
        </record>

        <!-- Privilege: appears as a selection dropdown in user settings -->
        <record id="res_groups_privilege_fatura_analiz" model="res.groups.privilege">
            <field name="name">Fatura Analiz</field>
            <field name="category_id" ref="module_category_fatura_analiz"/>
            <field name="sequence">10</field>
        </record>

        <!--
            Group Hierarchy (each higher group implies all below):
            Muhasebe Yöneticisi (full CRUD)
              └── Muhasebe Sorumlusu (read + write)
                    └── Muhasebe Uzmanı (read only)
                          └── Muhasebe Çalışanı (read only)
                                └── base.group_user
        -->

        <record id="group_muhasebe_calisani" model="res.groups">
            <field name="name">Muhasebe Çalışanı</field>
            <field name="sequence">10</field>
            <field name="privilege_id" ref="res_groups_privilege_fatura_analiz"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Fatura analiz verilerini görüntüleyebilir (salt okunur).</field>
        </record>

        <record id="group_muhasebe_uzmani" model="res.groups">
            <field name="name">Muhasebe Uzmanı</field>
            <field name="sequence">20</field>
            <field name="privilege_id" ref="res_groups_privilege_fatura_analiz"/>
            <field name="implied_ids" eval="[(4, ref('group_muhasebe_calisani'))]"/>
            <field name="comment">Fatura analiz verilerini görüntüleyebilir (salt okunur).</field>
        </record>

        <record id="group_muhasebe_sorumlusu" model="res.groups">
            <field name="name">Muhasebe Sorumlusu</field>
            <field name="sequence">30</field>
            <field name="privilege_id" ref="res_groups_privilege_fatura_analiz"/>
            <field name="implied_ids" eval="[(4, ref('group_muhasebe_uzmani'))]"/>
            <field name="comment">Fatura analiz verilerini okuyabilir ve düzenleyebilir.</field>
        </record>

        <record id="group_muhasebe_yoneticisi" model="res.groups">
            <field name="name">Muhasebe Yöneticisi</field>
            <field name="sequence">40</field>
            <field name="privilege_id" ref="res_groups_privilege_fatura_analiz"/>
            <field name="implied_ids" eval="[(4, ref('group_muhasebe_sorumlusu'))]"/>
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">Tam yetki: okuma, yazma, oluşturma ve silme.</field>
        </record>

    </data>
</odoo>
