<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="guven_fatura_lock_wizard_view_form" model="ir.ui.view">
            <field name="name">guven.fatura.lock.wizard.form</field>
            <field name="model">guven.fatura.lock.wizard</field>
            <field name="arch" type="xml">
                <form string="Fatura Kilitle">
                    <group>
                        <field name="fatura_count" invisible="1"/>
                        <div colspan="2">
                            <p><strong><field name="fatura_count" readonly="1" nolabel="1" class="d-inline"/> adet fatura kilitlenecek.</strong></p>
                        </div>
                        <field name="lock_reason" placeholder="Kilitleme nedenini yazın (opsiyonel)..."/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object"
                                string="Kilitle" class="btn-primary" icon="fa-lock"/>
                        <button string="İptal" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_guven_fatura_lock_wizard" model="ir.actions.act_window">
            <field name="name">Fatura Kilitle</field>
            <field name="res_model">guven.fatura.lock.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
